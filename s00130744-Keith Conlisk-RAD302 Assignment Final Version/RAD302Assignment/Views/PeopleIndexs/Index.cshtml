@model IEnumerable<RAD302Assignment.Models.PeopleIndex>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
    </tr>

    @foreach (var people in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => people.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => people.Age)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = people.ID }) |
                @Html.ActionLink("Details", "Details", new { id = people.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = people.ID })
            </td>
        </tr>
    }

</table>